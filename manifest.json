{
    "manifest_version": 2,
    "name": "Youtube Zen",
    "version": "1.0",

    "description": "Hides or shows the Youtube video controls when paused.",
    "homepage_url": "https://github.com/Stevox404/youtube-zen",
    "icons": {
        "48": "icons/zen-min-48.png",
        "96": "icons/zen-min-96.png"
    },

    "permissions": [
        "activeTab",
        "*://*.youtube.com/*"
    ],

    "browser_action": {
        "default_icon": "icons/zen-min-96.png",
        "default_title": "Youtube Zen",
        "default_popup": "popup/index.html"
    }
}